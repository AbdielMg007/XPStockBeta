            android:name=".pantallas.buscar"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pantallas.precios"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pantallas.inventario"
            android:exported="false"
            android:screenOrientation="portrait" />
