<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".pantallas.precios">


    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/samsungbutton"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="5dp"
                    android:onClick="samsung"
                    app:srcCompat="@drawable/samsung" />

                <ImageView
                    android:id="@+id/applebutton"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="5dp"
                    android:onClick="apple"
                    app:srcCompat="@drawable/apple" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lgbutton"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="5dp"
                    android:onClick="lg"
                    app:srcCompat="@drawable/lg" />

                <ImageView
                    android:id="@+id/honorbutton"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="5dp"
                    android:onClick="honor"
                    app:srcCompat="@drawable/honor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/huaweibutton"
                    android:layout_width="200dp"
                    android:layout_height="205dp"
                    android:layout_marginLeft="5dp"
                    android:onClick="huawei"
                    app:srcCompat="@drawable/huawei" />

                <ImageView
                    android:id="@+id/ztebutton"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="5dp"
                    android:onClick="zte"
                    app:srcCompat="@drawable/zte" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/motorolabutton"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="5dp"
                    android:onClick="motorola"
                    app:srcCompat="@drawable/motorola" />

                <ImageView
                    android:id="@+id/realmebutton"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="5dp"
                    android:onClick="realme"
                    app:srcCompat="@drawable/realme" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/oppobutton"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="5dp"
                    android:onClick="oppo"
                    app:srcCompat="@drawable/oppo" />

                <ImageView
                    android:id="@+id/xiaomibutton"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="5dp"
                    android:onClick="xiaomi"
                    app:srcCompat="@drawable/xiaomi" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>